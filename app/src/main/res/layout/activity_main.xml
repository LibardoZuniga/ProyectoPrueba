<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="libardozuniga.pruebatecnica.MainActivity"
    android:background="?attr/colorControlHighlight">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCiudad"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/consultCiudad"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consultar"
        android:background="@color/boton"
        android:id="@+id/Consultar"
        android:layout_below="@+id/textCiudad"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/CiudadNombre"
        android:textStyle="bold"
        android:layout_below="@+id/Consultar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"/>

    <TextView
        android:textSize="52sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Temperatura"
        android:layout_below="@+id/CiudadNombre"
        android:layout_toLeftOf="@+id/Consultar"
        android:layout_toStartOf="@+id/Consultar"
        android:textColor="@color/text_color"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ImgClima"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/Consultar"

        android:layout_toRightOf="@+id/CiudadNombre"
        android:layout_alignBottom="@+id/Descripcion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/Descripcion"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/text_color"/>


</RelativeLayout>
